<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intent_handler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom|end"
    tools:context="com.karbaros.myapp.InstagramCloneActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@drawable/cover"
        android:id="@+id/ivInt"
        android:layout_weight="1"
        android:padding="16dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/ivFilter1"
                android:onClick="applyFilter"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/ivFilter2"
                android:onClick="applyFilter"
                android:scaleType="centerCrop"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/ivFilter3"
                android:onClick="applyFilter"
                android:layout_marginLeft="3dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/ivFilter4"
                android:onClick="applyFilter"
                android:layout_marginLeft="3dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/ivFilter5"
                android:onClick="applyFilter"
                android:layout_marginLeft="3dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/ivFilter6"
                android:onClick="applyFilter"
                android:layout_marginLeft="3dp"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
